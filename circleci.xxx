# Title:config.yml
# Description: CircleCI 2.0 configuration file
version: 2.1
jobs:
  build:
    working_directory: ~/mellow-ferret

    docker:
      - image: circleci/python:3.8.2
        environment:
          BOGUS: YADDA

    steps:
      - checkout
      - run:
          command: |
            python3 -m venv ~/mellow-ferret/src/venv
            . ~/mellow-ferret/src/venv/bin/activate
            pip install -r ~/mellow-ferret/src/requirements.ubuntu
      - save_cache:
          paths:
            - ./venv
          key: v1-dependencies-{{ checksum "~/mellow-ferret/src/requirements.txt" }}

      - run:
          name: run tests
          command: |
            ~/mellow-ferret/pytest.sh
      - store_artifacts:
          path: test-reports
          destination: test-reports

